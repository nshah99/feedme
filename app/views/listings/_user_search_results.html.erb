<div class="container">
<div class="row">	
<h2 class="text-left">Users</h2></div>

<% if !@user_result.nil?%>
  <% @user_result.each do |f|%>
  <div class="row">
	<div class="col-lg-3 text-center">
		<% pic = f.picture %>
		<%= image_tag(pic, class:"img-rounded", height:100, width:100) %>
	</div>
	<div class="col-lg-7">
		<p><%=link_to f.name, user_path(f)%> </p>
		<p><%=f.description %></p>

	</div>

</div><hr>
  <% end %>
<% else %>
<p>Tough luck. Couldn't find any users by that name.</p>
<% end %>
</div>


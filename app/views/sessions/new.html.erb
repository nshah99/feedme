
<div class="container signbody">
<form class="form-signin">

  <h2 class="form-signin-heading">Please sign in</h2>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.text_field :email, placeholder: "Enter your email id", class: "form-control" %>

      <%= f.password_field :password , placeholder: "Enter password", class: "form-control" %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-block" %>
    <% end %>

    <p class="text-center">New user? <%= link_to "Sign up now!", signup_path %></p>

</form>
</div>


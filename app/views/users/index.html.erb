
<% if !current_user.nil?%>
<br><br><br>
<div class="row">
  <h2 class="text-left">Top Listings (Based on popularity)</h2>
  <% @top5.each do |f|%>
    <%= link_to f.item, listing_path(f)%><br><br>
  <% end %>

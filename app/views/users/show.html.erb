


<div class="container profilecon">

      <div class="row text-center">
          <h1 class="text-muted" id="username"><%= @user.name%></h1>
      </div>

              <div class="row text-center userimage">
                <%= image_tag(@user.picture_url, class:"img-rounded", :width => 200) if @user.picture.present? %>
<!--         <%= image_tag('chef.jpg', class: "img-rounded", height:"200", width:"200",alt:"Chef")%> -->
<!--         <%pic = @user.picture%>
        <%= image_tag(pic) %> -->

              </div>
               <div class="row text-center"> 

                    <%= render 'follow_form' if signed_in?%>

               </div>      
      <div class="row text-center">
          <p id="userdescription" class="userdes"><%= @user.description%></p> <!-- replace with user description value here -->
      </div>

      <div class="row profilebar">
            <div class="col-xs-4 text-center profiletab">
            <h3><%= @user.followers.count%></h3>
            <p>Subscribers</p>
            </div>
            <div class="col-xs-4 text-center profiletab">
            <h3><%= @user.followed_users.count %></h3>
            <p>Subscribing</p>
            </div>
            <div class="col-xs-4 text-center profiletab">
            <h3><%= @user.reviews.count %></h3>
            <p>Reviews</p>
            </div>
      </div>

      <div class="row">

          <ul class="inline"><li><h4 class="profileentry">Address</h4> </li><li><%= @user.address_line %></li></ul>
	  
      </div>  
      <hr>
      <div class="row">
          <ul class="inline"><li><h4 class="profileentry">Cuisines</h4> </li><li><%= @user.cuisines %></li></ul>
          
      </div>
         <!--<% if @user.id!=current_user.id %>
            <p><%= link_to "Subscribe", '#', class: "btn btn-large btn-primary btn-block" %></p>    
          <% end %>-->

<hr>

<h4>My Listings</h4>
<br>
<% @listing.each do |f|%>
<div class="row">
            <div class="col-xs-2 text-center">
            <h3>FRI</h3> <!-- place day of week of listing date here -->
            <p>Oct 26</p> <!-- place month and date of listing date here -->
          </div>
            <div class="col-xs-5 text-center">
              <br>
                  <% listpic = f.picture %>
                  <%= image_tag(listpic, class:"img-thumbnail", width:"100", height:"100") %><br>
            </div>
            <div class="col-xs-5 text-center">
              <br>
                  <%= link_to f.item, listings_path+"/"+f.id.to_s%><br>
            </div>
</div>
<% end %>

<hr>

<h4>My Reviews</h4>
*Replace the Name of user with image of user*<br><br>
<% @review.each do |f|%>
 <% user = f.order.user%>
<%=link_to user.name, users_path+"/"+user.id.to_s%> says: 
  <%= f.review_text%><br><br>  
<% end %>
</div>
